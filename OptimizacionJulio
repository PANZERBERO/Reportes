    <script>
        // Registrar el plugin de datalabels globalmente
        Chart.register(ChartDataLabels);

        // --- Datos de los videos ---
        const videoData = [
            { id: 1, ctr: [1.2, 2.3], retention: [8.3, 3.1] },
            { id: 2, ctr: [4.2, 6.4], retention: [27.3, 34.5] },
            { id: 3, ctr: [2.4, 3.8], retention: [15.0, 17.4] }
        ];

        // --- Función para crear gráficos ---
        const createChart = (ctx, chartData, unit) => {
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Antes', 'Después'],
                    datasets: [{
                        label: 'Rendimiento',
                        data: chartData,
                        backgroundColor: [
                            '#e5e7eb', // gray-200
                            '#0097A7'  // brand-text
                        ],
                        borderColor: [
                            '#d1d5db', // gray-300
                            '#007f8a'
                        ],
                        borderWidth: 1,
                        borderRadius: 4,
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    layout: {
                        padding: {
                            right: 35 // Espacio a la derecha para que no se corten las etiquetas
                        }
                    },
                    scales: {
                        x: {
                            display: false,
                            beginAtZero: true,
                        },
                        y: {
                            display: false,
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            enabled: false
                        },
                        datalabels: {
                            anchor: 'end',
                            align: 'end',
                            formatter: (value) => value.toFixed(1) + unit,
                            color: '#4b5563', // gray-600
                            font: {
                                weight: 'bold',
                                size: 14,
                            }
                        }
                    }
                }
            });
        };

        // --- Crear todos los gráficos ---
        videoData.forEach(video => {
            // Gráfico de CTR
            const ctrCtx = document.getElementById(`ctrChart${video.id}`).getContext('2d');
            createChart(ctrCtx, video.ctr, '%');

            // Gráfico de Retención
            const retentionCtx = document.getElementById(`retentionChart${video.id}`).getContext('2d');
            createChart(retentionCtx, video.retention, '%');
        });
    </script>

